@model Ecommerce.Web.Model.MyUserViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .left {
        margin-left: 25px;
    }

    img {
        width: 350px;
        height: 250px;
        margin-right: 15px;
    }

    .card {
        background-color: #0e344f;
    }
</style>
<div class="container text-white">
    <div class="card mx-auto mt-lg-5" style="width:700px;border-radius:15px;">
        <h2 class="text-center">User Login</h2>
        <hr />
        <div class="row mb-4" style="display:flex;justify-content:center;">
            <div class="col">
                <form method="post">
                    <div class="form gap-3 d-grid">
                        <div class="left">
                            <label class="form-label"> UserId or Email </label>
                            <input class="form-control" asp-for="Email" />
                        </div>
                        <div class="left">
                            <label class="form-labbel"> Password</label>
                            <input class="form-control" asp-for="Pwd" type="password" />
                        </div>
                        <div class="left mt-5">
                            <button type="submit" class="btn-success form-control">Login now</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col me-3">
                <div>
                    <img class="img-rounded" src="https://media.istockphoto.com/vectors/login-page-on-laptop-screen-notebook-and-online-login-form-sign-in-vector-id1135341047?k=20&m=1135341047&s=612x612&w=0&h=ai30N4N8VC_uylITs2bWfJ0k3GzbWn-q0nR664tj0tk=" />
                </div>
            </div>
        </div>
    </div>
</div>